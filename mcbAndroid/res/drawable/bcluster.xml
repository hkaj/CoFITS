<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_activated="true">
	    <shape>
	        <solid android:color="@color/cluster_hovered" />
     		<stroke android:width="4dip" android:color="@color/selected_byother" />
	    </shape>
	</item>
	
	<item android:state_selected="true">
	    <shape>
	        <solid android:color="@color/cluster_selected" />
     		<stroke android:width="4dip" android:color="@color/selected_byother" />
	    </shape>
	</item>
		
	<item>
	    <shape>
	        <solid android:color="@color/cluster" />
     		<stroke android:width="4dip" android:color="@color/selected_byother" />
	    </shape>
	</item>
</selector>